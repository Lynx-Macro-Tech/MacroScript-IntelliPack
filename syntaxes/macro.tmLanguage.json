{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Macro Script",
	"scopeName": "source.macro",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords-control"
		},
		{
			"include": "#keywords-loop"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#builtins"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#colors"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.macro",
					"match": "\\b(if|while|for|return)\\b"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.macro",
					"match": "//.*$"
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"name": "string.quoted.double.macro",
					"begin": "\"",
					"end": "\"",
					"patterns": [
						{
							"name": "constant.character.escape.macro",
							"match": "\\\\."
						}
					]
				}
			]
		},
		"keywords-control": {
			"patterns": [
				{
					"name": "keyword.control.conditional.macro",
					"match": "\\b(if|elseif|else|endif|ifmatches)\\b"
				},
				{
					"name": "keyword.control.flow.macro",
					"match": "\\b(break|while|until)\\b"
				}
			]
		},
		"keywords-loop": {
			"patterns": [
				{
					"name": "keyword.control.loop.macro",
					"match": "\\b(do|loop|for|next)\\b"
				}
			]
		},
		"functions": {
			"patterns": [
				{
					"name": "support.function.command.macro",
					"match": "\\b(log|echo|prompt|set|unset|inc|dec|toggle|stop|wait|key|keydown|keyup|look|pick|gui|unsafe|endunsafe|slotclick|getslotitem|getslot|getidrel|achievementget|clearchat)\\b"
				}
			]
		},
		"variables": {
			"patterns": [
				{
					"name": "variable.global.macro",
					"match": "@[a-zA-Z_][a-zA-Z0-9_]*"
				},
				{
					"name": "variable.parameter.hash.macro",
					"match": "#[a-zA-Z_][a-zA-Z0-9_]*"
				},
				{
					"name": "variable.other.ampersand.macro",
					"match": "&[a-zA-Z_][a-zA-Z0-9_]*"
				}
			]
		},
		"builtins": {
			"patterns": [
				{
					"name": "constant.language.builtin.macro",
					"match": "\\b(XPOS|YPOS|ZPOS|YAW|PITCH|ITEM|DURABILITY|HITID|HIT|GUI|INVSLOT|CHAT)\\b"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.macro",
					"match": "\\b\\d+\\b"
				}
			]
		},
		"colors": {
			"patterns": [
				{
					"name": "constant.other.color.macro",
					"match": "&[0-9a-fA-Fk-orK-OR]"
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.macro",
					"match": "(==|!=|>=|<=|>|<|&&|\\|\\||=)"
				}
			]
		}
	}
}